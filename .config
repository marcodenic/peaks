# This file contains project configuration and build settings

# Project Information
PROJECT_NAME=peaks
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION="Beautiful Terminal Bandwidth Monitor"
PROJECT_AUTHOR=marco
PROJECT_URL=https://github.com/marco/peaks

# Go Configuration
GO_VERSION=1.21
GO_MODULE=github.com/marco/peaks

# Build Configuration
BINARY_NAME=peaks
BUILD_DIR=./build
DIST_DIR=./dist

# Dependencies
BUBBLETEA_VERSION=latest
LIPGLOSS_VERSION=latest
BUBBLES_VERSION=latest
GOPSUTIL_VERSION=v4

# Features
BRAILLE_CHARTS=true
CROSS_PLATFORM=true
COLOR_SUPPORT=true
INTERACTIVE_CONTROLS=true
STATISTICS_PANEL=true
HELP_SYSTEM=true

# Platform Support
LINUX=true
MACOS=true
WINDOWS=true

# UI Configuration
DEFAULT_WIDTH=80
DEFAULT_HEIGHT=24
UPDATE_INTERVAL=100ms
MAX_DATA_POINTS=120
CHART_HEIGHT=8

# Color Scheme
UPLOAD_COLOR=#F87171
DOWNLOAD_COLOR=#34D399
OVERLAY_COLOR=#FBBF24
BACKGROUND_COLOR=#1F2937
BORDER_COLOR=#7C3AED
TEXT_COLOR=#F9FAFB
